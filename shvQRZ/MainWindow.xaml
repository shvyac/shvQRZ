<Window x:Class="shvQRZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shvQRZ"
        mc:Ignorable="d"
        Title="shvQRZ" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid x:Name="GridMyLog" Background="#FFE5E5E5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="138*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlDarkDarkColorKey}}"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*"/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="DataGridMyLog" Margin="5,65,5,25" AutoGeneratingColumn="DataGridMyLog_AutoGeneratingColumn" AutoGeneratedColumns="DataGridMyLog_AutoGeneratedColumns"/>
            <Button x:Name="ButtonMyLogImportFrom" Content="Import Log data from" Margin="5,35,0,0" VerticalAlignment="Top" Click="ButtonMyLogImportFrom_Click" Height="25" HorizontalAlignment="Left" Width="200"/>
            <ComboBox x:Name="ComboBoxMyLogFileName" Margin="110,5,5,0" VerticalAlignment="Top" Loaded="ComboBoxMyLogFileName_Loaded" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="25"/>
            <StatusBar Height="25" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
                <StatusBar.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlDarkDarkColorKey}}"/>
                </StatusBar.Background>
                <TextBlock x:Name="TextBlockMyLogStatusBar" TextWrapping="Wrap" Height="20" VerticalAlignment="Center" Margin="5,0,5,0">
                    <TextBlock.Foreground>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                    </TextBlock.Foreground>
                </TextBlock>
            </StatusBar>
            <Button x:Name="ButtonSelectMylogFile" Content="Select..." HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Width="100" Height="25" Click="ButtonSelectMylogFile_Click"/>
            <Button x:Name="ButtonExportCSVfile" Content="Export CSV" Margin="210,35,5,0" VerticalAlignment="Top" Width="200" Height="25" Click="ButtonExportCSVfile_Click" HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</Window>
